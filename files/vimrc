" set 4 space tabs
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smarttab

" set indent
set smartindent
set autoindent

" show line number
set number

" enable syntax highlighting
syntax on

" highlight searches
set hlsearch

" enable autocomplete menu
set wildmenu

" enable loading plugin files for file type
filetype plugin indent on

" color scheme.
colorscheme desert
