" be iMproved
set nocompatible

" Required by vundle
filetype off

" load vundle
set rtp+=~/.vim/bundle/vundle/
call vundle#rc()

" let Vundle manage Vundle
" required! 
Bundle 'gmarik/vundle'

" Powerline
Bundle 'Lokaltog/vim-powerline'
" Solarized color scheme
Bundle 'altercation/vim-colors-solarized'

" set 4 space tabs
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smarttab

" set indent
set smartindent
set autoindent

" show line number
set number

" enable syntax highlighting
syntax enable

" highlight searches
set hlsearch

" enable autocomplete menu
set wildmenu

" enable loading plugin files for file type
" also required by vundle
filetype plugin indent on

" color scheme
" degrade to 256 color in terminal.
let g:solarized_termcolors=256
set background=dark
colorscheme solarized
